# reasonable parameters for large plots on a 13" screen
figure.constrained_layout.use : True
figure.figsize      : 10, 6
savefig.transparent : True
font.size           : 16
pdf.fonttype        : 42
axes.labelsize      : 20
axes.linewidth      : 1.5
xtick.direction     : in
ytick.direction     : in
xtick.major.size    : 6
ytick.major.size    : 6
xtick.major.width   : 1.5
ytick.major.width   : 1.5
xtick.labelsize     : 20
ytick.labelsize     : 20
